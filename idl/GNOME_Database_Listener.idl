#include <Bonobo.idl>

#ifndef __GNOME_Database_Listener_idl__
#define __GNOME_Database_Listener_idl__

module GNOME {
module Database {
	/*
         * Listener interface, implemented by GDA clients to
         * receive notifications from providers
         */
        enum ListenerAction {
		LISTENER_ACTION_DATABASE,
		LISTENER_ACTION_ERROR,
		LISTENER_ACTION_SHUTDOWN
	};

	interface Listener : Bonobo::Unknown {
		void notifyAction (in string message,
				   in ListenerAction action,
				   in string description);
	};

};
};

#endif
