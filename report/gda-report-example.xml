<report borderstyle="solid" units="pt">
   <querylist>
     <query id="gfoundation-library">
	<select>
		<targetlist>
			<target name="table_name" />
		</targetlist>
		<valuelist>
			<value id="publishing"><field name="publishing" /></value>
			<value id="price"><field name="price" /></value>
			<value id="author"><field name="price" /></value>
			<value id="isbn"><field name="isbn" /></value>
			<value id="title"><field name="title" /></value>
		</valuelist>
	</select>
    </query>
  </querylist>

  <reportheader>
    <label text="Gnome Foundation Library" x="0" y="0" width="255" height="31" borderwidth="0"
           borderstyle="none" fontsize="24" fontweight="bold" fontitalic="yes"/>
    <picture x="0" y="115" width="198" height="225" format="png" source="extern" data="/usr/share/pixmaps/gnome-logo-large.png"/>
	</reportheader>
	<pageheaderlist>
    <pageheader height="32">
      <line x1="0" y1="26" x2="70" y2="26" linewidth="1"/>
      <line x1="0" y1="28" x2="70" y2="28" linewidth="1"/>
      <line x1="74" y1="26" x2="250" y2="26" linewidth="1"/>
      <line x1="74" y1="28" x2="250" y2="28" linewidth="1"/>
      <line x1="254" y1="26" x2="350" y2="26" linewidth="1"/>
      <line x1="254" y1="28" x2="350" y2="28" linewidth="1"/>
      <line x1="354" y1="26" x2="450" y2="26" linewidth="1"/>
      <line x1="354" y1="28" x2="450" y2="28" linewidth="1"/>
      <line x1="450" y1="26" x2="520" y2="26" linewidth="1"/>
      <line x1="450" y1="28" x2="520" y2="28" linewidth="1"/>
      <label text="ISBN" x="0" y="5" width="70" height="20" borderwidth="0"
           borderstyle="none" fontsize="12" fontweight="bold"/>
      <label text="Title" x="74" y="5" width="176" height="20" borderwidth="0"
           borderstyle="none" fontsize="12" fontweight="bold"/>
      <label text="Author" x="254" y="5" width="96" height="20" borderwidth="0"
           borderstyle="none" fontsize="12" fontweight="bold"/>
      <label id="l_publishing" text="Publishing" x="354" y="5" width="96" height="20" borderwidth="0"
           borderstyle="none" fontsize="12" fontweight="bold"/>
      <label id="l_price" text="Price" x="450" y="5" width="70" height="20" borderwidth="0"
           borderstyle="none" fontsize="12" fontweight="bold"/>
    </pageheader>
  </pageheaderlist>
  <datalist>
    <reportdata>
      <detail>
        <repfield query="gfoundation-library" value="isbn" x="0" y="0" width="70" height="20"
                  datatype="integer" borderstyle="none" fontsize="10" fontweight="normal"/>
        <repfield query="gfoundation-library" value="title" x="74" y="0" width="176" height="20"
                  datatype="string" borderstyle="none" fontsize="10" fontweight="normal"/>
        <repfield query="gfoundation-library" value="author" x="254" y="0" width="96" height="20"
                  datatype="string" borderstyle="none" fontsize="10" fontweight="normal"/>
        <repfield query="gfoundation-library" value="publishing" x="354" y="0" width="96" height="20"
                  datatype="string" borderstyle="none" fontsize="10" fontweight="normal"/>
        <repfield query="gfoundation-library" value="price" x="450" y="0" width="70" height="20"
                  datatype="integer" borderstyle="none" fontsize="10" fontweight="normal"/>
      </detail>
    </reportdata>
  </datalist>
	<pagefooterlist>
    <pagefooter height="32">
      <line x1="0" y1="0" x2="400" y2="0" linewidth="1" linestyle="solid"/>
      <label text="Page:" x="405" y="2" width="30" height="30" borderwidth="1"
           borderstyle="none" fontsize="10" fontweight="bold" valignment="center"/>
      <special text="%p/%t" x="435" y="2" width="90" height="30" borderwidth="0" fontsize="10"
               fontweight="normal" halignment="center" valignment="center"/>
      <special text="%D" x="525" y="2" width="20" height="30" borderwidth="0" fontsize="10"
               fontweight="normal" halignment="center" valignment="center" dateformat="%d/%m/%Y"/>
    </pagefooter>
  </pagefooterlist>
</report>
