#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage()
{
	cat <<EOF
Usage: gda-config [OPTIONS] [LIBRARIES]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
Libraries:
	client
	clientui
	server
	gnome
	cpp
	component
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo @VERSION@
      exit 0
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    client)
      lib_client="yes"
      ;;
    clientui)
      lib_clientui="yes"
      ;;
    server)
      lib_server="yes"
      ;;
    gnome)
      lib_gnome="yes"
      ;;
    cpp)
      lib_cpp="yes"
      ;;
    component)
      lib_component="yes"
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi
if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi
if test "$echo_cflags" = "yes"; then
	cflags="-I@prefix@/include/gda"
	if test "$lib_clientui" = "yes"; then
		cflags="$cflags -I@prefix@/include/gnome-db"
	fi
	if test "$lib_gnome" = "yes"; then
		cflags="$cflags @GNOME_INCLUDEDIR@"
	fi
	if test "$lib_cpp" = "yes"; then
		cflags="$cflags -I@prefix@/include/gda++"
	fi
	if test "$lib_component" = "yes"; then
		cflags="$cflags @BONOBO_CFLAGS@"
	fi
	echo $cflags
fi
if test "$echo_libs" = "yes"; then
	libs="-lpthread -lgda-common -lxml"
	if test "$lib_client" = "yes"; then
		libs="$libs -lgda-client"
	fi
	if test "$lib_clientui" = "yes"; then
		libs="$libs -lgda-client -lgnomedb -lgnomeprint"
	fi
	if test "$lib_server" = "yes"; then
		libs="$libs -lgda-server"
	fi
	if test "$lib_gnome" = "yes"; then
		libs="$libs @GNORBA_LIBS@"
	fi
	if test "$lib_cpp" = "yes"; then
		libs="$libs -lgda-clientcpp"
	fi
	if test "$lib_component" = "yes"; then
		libs="$libs @BONOBO_LIBS@ -lgnomedbcomponents"
	fi
	echo @INTLLIBS@ -L@prefix@/lib $libs
fi

