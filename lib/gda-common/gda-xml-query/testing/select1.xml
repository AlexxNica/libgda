<?xml version="1.0"?>
<!DOCTYPE query SYSTEM "xmlquery.dtd">

<query>
  <select>
    <targetlist>
      <target name="tab_a" id="t"/>
    </targetlist>
    <valuelist>
      <value id="v01">
        <field source="t" name="a"/>
      </value>
      <value id="v02">
        <field source="t" name="b"/>
      </value>
      <value id="v03">
        <func name="sum" aggregate="yes">
          <arglist>
            <field source="t" name="c"/>
        </arglist>
        </func>
      </value>
      <value id="v04">
        <const value="abc" type="char"/>
      </value>
    </valuelist>
    <where>
      <and>
        <not>
          <null>
            <field source="t" name="x"/>
          </null>
        </not>
        <ne>
          <field source="t" name="a"/>
          <field source="t" name="b"/>
        </ne>
      </and>
    </where>
    <having>
      <gt>
        <func name="sum" aggregate="yes">
          <arglist>
            <field source="t" name="c"/>
          </arglist>
        </func>
        <const value="0" type="int"/>
     </gt>
    </having>
    <group>
      <valueref source="v01"/>
      <valueref source="v02"/>
      <valueref source="v04"/>
    </group>
    <order>
      <valueref source="v02"/>
      <valueref source="v01"/>
    </order>
  </select>
</query>


